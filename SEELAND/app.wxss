 /*总菜单容器*/
.floatmenu {
 	display: block;
	height: 38px;
	position: relative;
}

/*一级菜单*/
.floatmenu-dt {
	font-size: 15px;
	float: left;
	/*hack*/
	width: 50%;
	height: 38px;
	border-right: 1px solid #d2d2d2;
	border-bottom: 1px solid #d2d2d2;
	text-align: center;
	background-color: #f4f4f4;
	color: #5a5a5a;
	line-height: 38px;
	z-index: 2;
}

/*二级菜单外部容器样式*/
.floatmenu-dd{
	position: absolute;
	width: 100%;
	/*hack*/
	/*top:-170px;*/
	bottom: 0;
	left:0;
	z-index:99;
}

/*二级菜单普通样式*/
.floatmenu-li{
	font-size: 14px;
	line-height: 34px;
	color: #575757;
	height: 34px;
	display: block;
	padding-left: 8px;
	background-color: #fff;
	border-bottom: 1px solid #dbdbdb;
}

/*二级菜单高亮样式*/
.floatmenu-li.highlight{
	background-color: #f4f4f4;
	color: #48C23D;
}


/* 显示与隐藏 */
.show {
	/*display: block;*/
	visibility: visible;
}

