.commentheader {  
  padding: 50rpx 0; 
  text-align: left;
  font-weight: normal;
    font-size: 30rpx;  
    line-height: 40rpx;
    color: #757575;     
}

.comment {    
    border-bottom: 2rpx solid #ededed;
}
.comment-user {
    font-size: 30rpx;
    line-height: 1.2;
    font-weight:normal;
    outline: none;
    color: #000;
    margin-bottom:25rpx;
    margin-top: 25rpx
}
.comment-date {
    font-size: 25rpx;
    line-height: 1.2;
    font-weight:normal;
    outline: none;
    color: #21759b;
    margin-bottom:30rpx;

   
}
.comment-summary{
  color: #757575; 
  font-size: 30rpx;  
  line-height:1.8rem

}


.detail-title{
  color: #757575; 
  font-size: 48rpx;  
  line-height:1.8rem;
  margin-top: 10rpx;
  margin-bottom: 10rpx;

}

.detail-subtitle{
  color: #757575; 
  font-size: 30rpx;  
  line-height:1.8rem;
  margin-bottom: 30rpx;
}

.detail-desc-bottom{
  color: #757575; 
  font-size: 30rpx;  
  line-height:1.8rem;
  margin-bottom: 5rpx;
  border-bottom: 2rpx solid #ededed;
}


.featured-image {

display:inline-block;
overflow:hidden;
margin: 0

}


.home-scroll-top {
  position: absolute;
  bottom: 30px;
  right: 30px;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: #21759b;  
  opacity:1.0; 
  box-shadow:2px 2px 10px #AAA;
  z-index: 100;
}



.entry-summary image{
  width:90%!important;
} 

.detail-desc-click{
  color: red; 
  font-size: 28rpx;  
  line-height:1.8rem;
  margin-bottom: 5rpx;
  text-align: center;
 
}



.sharedetail
{
  position: relative;
  text-align: center;
}


.share-button {
  width: 150rpx;
  display: flex !important;
  flex-direction: column;
  justify-content: center;
  margin-left: 5px;
  margin-right: 20rpx;
  border-radius: 2px;
  text-align: center;
  padding: 0 2px !important;
  font-size: 12px;
  background-color: #20B444;
  color: #fff;  
}

.copy-button
{
  border: 1px solid #eee !important;
  color: #296FD0 !important;  
  height:60rpx;
  width: 250rpx;
 /* margin-left: 30rpx*/
}

.showMessage
{
 
  font-weight: normal;
  font-size: 26rpx;
  
  color: sandybrown;
  margin-top: 20rpx;
