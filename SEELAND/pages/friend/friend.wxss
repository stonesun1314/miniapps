
.the-box{
    box-sizing: border-box;
    width: 100%;
    padding-top: 12px;
    padding-bottom: 12px;
    border-bottom: 1px solid rgb(235, 235, 235);
    background-color: rgb(255, 255, 255);
    position: relative;

}
.box-header{
     width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
    padding-bottom: 6px;
    padding-left: 12px;
    padding-right: 12px;
    box-sizing: border-box;
}
.user-image{
    width: auto;
    height: auto;
    position: relative;
}
.user-image image{
    user-select: none;
    color: rgb(255, 255, 255);
    background-color: rgb(230, 230, 230);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 25px;
    border-radius: 50%;
    height: 50px;
    width: 50px;
}
.user-info{
    box-sizing: border-box;
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    padding-left: 16px;
}
.user-name{
    width: 100%;
    font-size: 16px;
    color: rgb(0, 0, 0);
}

.data{
    width: 100%;
    font-size: 14px;
    color: rgb(176, 176, 176);
}

.box-content{
    width: 100%;
    height: auto;
}
.content-text{
    font-size: 16px;
    padding-left: 12px;
    padding-right: 12px;
    line-height: 1.6;
    letter-spacing: 0.5px;
    font-weight: 300;
    word-wrap: break-word;
}
.content-image{
    width: 100%;
    height: auto;
}
.images{
    width: 100%;
    height: auto;
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding-right: 11px;
    padding-left: 11px;
}

.image-show1{
    width: 33.3333%;
    height: 0px;
    padding-bottom: 33.3333%;
}

.image-show1 image{
    width: 100%;
    min-height: 100%;
    box-sizing: border-box;
    padding: 1px;

}
.image-show0{
    width: 100%;
    height: 0px;
    padding-bottom: 50%;
}

.image-show0 image{
    width: 100%;
    min-height: 100%;
    box-sizing: border-box;
    padding: 1px;

}

.box-footer{
    display: flex;
    flex-direction: row-reverse;
    box-sizing: border-box;
    padding-right: 12px;
}
