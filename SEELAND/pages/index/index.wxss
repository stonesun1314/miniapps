/*topic list 卡片样式*/
.topic-common-list {
  padding:30rpx 30rpx;
}
.list-item {
  position: relative;
  border-bottom: 1px solid #eee;  
  overflow: hidden;
  clear: both;
 
  border: 1px solid #ccc;
  border-radius: 6px;
  margin-bottom: 40rpx;
  background: #fff;
}


.list-item  image.cover {
  width: 100%;
  /*height: 400rpx;*/
