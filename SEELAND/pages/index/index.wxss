}

/* 搜索 */

.search-section {
  /*background-color: #fff;
  border: 1px #eee solid;*/
  padding: 8px 8px;  
  margin-left:200rpx;

}
      
.search-button {
  border-left: 0!important;
  border-top: 1px solid #21759b !important;
  border-right: 1px solid #21759b !important;
  border-bottom: 1px solid #21759b !important;
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
  border-top-right-radius: 60px;
  border-bottom-right-radius: 60px;
  /*color: #296FD0 !important; */
  color: #fff !important;

  width: 20%;
  margin:0!important;
}

.search-button icon{
  position:absolute;
  margin-top:14rpx;
  margin-left:0rpx;
}

.search-input { 
  background-color: #fff;
  padding: 16rpx 0 16rpx 44rpx;
  min-height: 1rem;
  font-size: 30rpx;
/*  position: absolute;*/
  border-bottom-left-radius: 60px;
  border-top-left-radius: 60px;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  border:1px solid #21759b;
  border-right: 0!important;
  height:36rpx;
  width: 80%;
  text-align: left;

  
  
}

.share-button {
  border: 1px solid #eee !important;
  color: #296FD0 !important; 
  left:10rpx;
height:60rpx;
width:200rpx;  
}

.search-pancel {
  display: flex;
  flex-direction: row;
   position: relative;
   margin: 20rpx;
  /*margin-bottom: 20rpx*/
  
}

.search-pancel image {
  width: 50rpx;
  height:50rpx;  
  margin-left: 20rpx;
  vertical-align: middle;
}

.search-area-fixed {
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  box-shadow: 0 10rpx 20rpx rgba(255, 255, 255, 1);
  z-index: 100;
  width: 100%;

}

