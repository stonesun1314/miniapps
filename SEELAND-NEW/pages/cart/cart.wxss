.cart-list {
    margin-top: 0;
    margin-bottom: 49px;
}

.cart-item {
    display: flex;
    position: relative;
    padding: 10px;
    border-bottom: 1px solid #ddd;
}

.cart-item .delete-cart {
    padding: 2px;
    position: absolute;
    top: 12px;
    right: 13px;
    border: 1px solid #707070;
    border-radius: 50%;
    z-index: 1;
}

.cart-item .delete-cart image {
    width: 15px;
    height: 15px;
}

.cart-item .product-image, .cart-item .product-image image {
    width: 200rpx;
    height: 200rpx;
}

.cart-item .cart-detail {
    width: 350rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex-grow: 1;
    position: relative;
    padding: 0 20rpx;
    padding-right: 25px;
}

.cart-item .cart-detail .product-title, .cart-item .cart-detail .choose-wrapper {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.cart-item .cart-detail .choose-wrapper text {
    color: #555;
}

.cart-item .cart-detail .product-title {
    /* color: #96588a; */
    /* color: #21759b; */
    
    word-break: break-all;
}

.cart-item .cart-detail .choose-wrapper .choose-tip {
    display: none;
}

.cart .cart-detail .zan-stepper {
    margin-top: 3px;
}

.cart .cart-detail .zan-stepper view {
    line-height: 15px;
    min-width: 20px;
}

.cart .cart-detail .zan-stepper .zan-stepper__text {
    height: 25px;
    line-height: 25px;
}

.cart-item .cart-item-price {
    display: flex;
    padding-right: 10rpx;
    position: absolute;
    bottom: 0;
    right: 0;
}

.cart-item-price .line-subtotal {
    margin-left: 7px;
}

/* 底栏 */

.checkout {
    display: flex;
    width: 100%;
    height: 50px;
    background-color: #fff;
    font-size: 12px;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
}

.checkout .total {
    display: flex;
    align-items: center;
    flex-grow: 1;
    padding-left: 10px;
    border-top: 1px solid #ddd;
}

.checkout .total .without-shipping {
    font-size: 12px;
    color: #707070;
}

.checkout .total .cart-total, .checkout .total .shipping-total,
.checkout .total .discount-total {
    display: flex;
    align-items: center;
}

.checkout .total .cart-total, .checkout .total .discount-total {
    margin-right: 10px;
}

.checkout .total .cart-total .price, .checkout .total .shipping-total .price,
.checkout .total .discount-total .price {
    font-size: 18px;
}

.checkout .total .cart-total .price {
    /* color: #96588a; */
    color: #21759b;

}

.checkout .checkout-btn {
    display: flex;
    align-items: center;
    height: auto;
    padding: 0 20px;
}

/* 登录框 */

.login-btn {
    padding: 10px;
    border-left: 0;
    border-right: 0;
    border-radius: 0;
    width: 100%;
    display: flex;
    justify-content: center;
}
