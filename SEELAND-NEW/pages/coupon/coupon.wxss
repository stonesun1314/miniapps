/* pages/coupon/coupon.wxss */

.container {
    padding: 20rpx;
}

.coupon-input-wrapper {
    display: flex;
}

.coupon-input-wrapper input {
    color: #555;
    flex-grow: 1;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    margin-right: 10rpx;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
}

.coupon-input-wrapper button {
    display: flex;
    align-items: center;
    /*height: auto;*/
    height: 80rpx;
    width: 160rpx;
    border: 0;
    border-radius: 4rpx;
   /* font-size: 10rpx;*/
   justify-content:center;

}

/* 优惠券列表 */

.coupon-list {
    padding: 30rpx 0;
}

.coupon-list .coupon {
    position: relative;
    padding: 10rpx 0;
}

.coupon .coupon-content {
    display: flex;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    /*height: 100%;*/
    height: 100%;
    box-shadow: 2rpx 4rpx 2rpx rgba(0, 0, 0, 0.072);
}

.coupon-content .coupon-value {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40%;
    color: #fff;
    /*font-size: 64rpx;*/
    font-size: 48rpx;
    /*padding-right: 10rpx;*/
    padding-right: 80rpx;
}

.coupon-content .coupon-value .currency {
    font-size: 36rpx;
}

.coupon-content .coupon-detail {
    flex-grow: 1;
    padding: 40rpx 36rpx;
}

.coupon-detail .coupon-description {
    font-size: 30rpx;
    word-break: break-all;
}

.coupon-detail .coupon-expiry-date {
    font-size: 24rpx;
    color: #707070;
    word-break: break-all;
    /*white-space: nowrap;*/
}
