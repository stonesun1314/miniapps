/* pages/my.wxss */

page {
    min-height: 100%;
    background-color: #f5f5f5;
}

.block {
    padding: 7px 15px;
    margin: 7px 0;
    background: #fff;
}

.block.user-info {
    padding: 0;
    
}

.block.user-info > button, .block.user-info > view {
    width: 100%;
    margin: 0;
    padding: 7px 15px;
}

.user-info image {
    width: 60px;
    height: 60px;
    margin-right: 15px;
}

.block button {
    color: #555;
    background: #fff;
    border: 0;
    border-radius: 0;
    display: flex;
    align-items: center;
    font-size: 14px;
    padding: 0 5px;
}

.block-btn {
    padding: 0;
}

.block-btn image {
    width: 20px;
    height: 20px;
    margin-right: 10px;
}

.block-btn button {
    padding: 7px 2px;
    margin: 0 12px;
    border-bottom: 1px solid #ddd;
}

.block-btn button:last-child {
    border-bottom: 0;
}


  
/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  

/*content*/  
.drawer_box {  
  width: 650rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 40%;  
  left: 0;  
  z-index: 1001;  
  background: #FAFAFA;  
  margin: -150px 50rpx 0 50rpx;  
  border-radius: 5px;  
  
}  
  
.drawer_title{  
  padding:15px;  
  font: 30rpx "microsoft yahei";  
  font-weight: bold;
  text-align: center;  
  border-bottom: 1px solid #E8E8EA; 
  color: #21759b;  
}  
.drawer_content {  
  height: 310px;  
  overflow-y: scroll;
  text-align: center;  
   /*超出父盒子高度可滚动*/  
}  
  
.btn_ok{  
  padding: 10px;  
  font: 30rpx "microsoft yahei"; 
  font-weight: bold; 
  text-align: center;  
  border-top: 1px solid #E8E8EA;  
  color: #21759b;  
}  
  
.top{  
    padding-top:2px;  
}  
.bottom {  
    padding-bottom:2px;  
}  
.title {  
    height: 30px;  
    line-height: 30px;  
    width: 650rpx;  
    text-align: center;  
    display: inline-block;  
    font: 300 28rpx/14px "microsoft yahei";  
   /* border-bottom: 1px solid #E8E8EA;  */
}  
  

radio{  
    margin-right: 20px;  
}  
.grid { display: -webkit-box; display: box; }  
.col-0 {-webkit-box-flex:0;box-flex:0;}  
.col-1 {-webkit-box-flex:1;box-flex:1;}  
.fl { float: left;}  
.fr { float: right;}  



