/* pages/order-list/order-list.wxss */

page {
    min-height: 100%;
    background-color: #f5f5f5;
}

.empty-order text {
    margin-top: -40px;
}

/* 选项卡 */

.zan-tab {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 11;
}

.zan-tab__bd--scroll {
    height: 40px !important;
}

.tab-content-wrapper {
    background-color: #f5f5f5;
    padding: 0;
    margin-top: 40px;
}

/* 订单 */

.order {
    background-color: #fff;
    padding-top: 7px;
    margin: 10px 0;
}

.order .order-header, .order .order-price {
    padding: 0 15px;
    display: flex;
}

.order .order-header {
    justify-content: space-between;
}

.order .order-header .order-status {
    /* color: #96588a; */
    color: #21759b;

}

.order .order-price {
    justify-content: flex-end;
    line-height: 35px;
}

.order .order-price view {
    margin-left: 10px;
}

.order .order-price view .currency {
    margin-left: 4px;
}

/* 购物车列表 */

.cart-list {
    background-color: #fff;
    margin: 0;
}

.cart-item {
    display: flex;
    position: relative;
    margin: 3px 0;
    padding: 5px 15px;
    background-color: #fafafa;
}

.cart-item:last-child {
    border-bottom: 0;
}

.cart-item .product-image {
    flex-shrink: 0;
}

.cart-item .product-image image {
    width: 100rpx;
    height: 100rpx;
    flex-basis: 100rpx;
}

.cart-item .cart-detail-wrapper {
    display: flex;
    flex-grow: 1;
    padding: 0 20rpx;
}

.cart-item .cart-detail, .cart-item .cart-quantity {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.cart-item .cart-detail {
    width: 350rpx;
}

.cart-item .cart-detail .product-title, .cart-item .cart-detail .choose-wrapper {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.cart-item .cart-detail .product-title {
    /* color: #96588a; */
    /* color: #21759b; */
    word-break: break-all;
    font-size: 12px;
}

.cart-item .cart-detail .choose-wrapper {
    font-size: 12px;
}

.cart-item .cart-detail .choose-wrapper .choose-tip {
    display: none;
}

.cart-item .cart-item-price {
    display: flex;
    align-items: center;
}

/* 操作按钮 */

.actions-button {
    display: flex;
    justify-content: flex-end;
    border-top: 1px solid #eaeaea;
    background-color: #fff;
}

.actions-button button {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 7px 0;
    margin-right: 10px;
    border-radius: 2px;
    border: 1px solid #ccc;
    line-height: 30px;
    padding: 0 10px;
}

.actions-button button.btn-primary {
    border-radius: 2px;
    margin-right: 10px;
    border-color: transparent;
}

/* 加载更多和无更多 */

.zan-loadmore.zan-loadmore--loading {
    margin: 10px auto;
    overflow: hidden;
}

.zan-loadmore.zan-loadmore--nomore {
    margin-bottom: 0;
    overflow: visible;
}
