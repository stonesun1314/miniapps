/* pages/order-detail/order-detail.wxss */

page {
    min-height: 100%;
    background-color: #f5f5f5;
}

.container {
    margin-bottom: 50px;
}

/* 订单状态 */

.order-status {
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 18px;
    /* background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#96588a), to(#bb7daf)); */
    background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#21759b), to(#bb7daf));
}

/* 物流信息 */

.order-shipping {
    border-bottom: 1px solid #eaeaea;
}

.order-shipping .button-main view {
    line-height: 1;
}

.order-shipping .go-shipping-detail image {
    width: 20px;
    height: 20px;
}

.order-shipping .shipping-detail {
    /* color: #96588a; */
    color: #21759b;
}

.order-shipping .time {
    color: #999;
    font-size: 12px;
}

.shipper {
    padding: 10px;
    padding-left: 0;
    display: flex;
}

.shipper .shipper-icon image {
    width: 45px;
    height: 45px;
    margin-right: 10px;
}

.shipper .shipper-detail {
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.shipper .code {
    font-size: 12px;
    color: #888;
}

/* 收货地址 */

.order-shipping, .select-address {
    height: auto;
    padding: 10px 14px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0;
    margin-top: 0;
}

.order-shipping .icon, .select-address .icon, .order-comment .icon,
.manager-comment .icon {
    flex-shrink: 0;
}

.order-shipping .icon image, .select-address .icon image,
.order-comment .icon image, .manager-comment .icon image {
    width: 25px;
    height: 25px;
    margin-right: 10px;
}

/* 买家留言 */

.order-comment, .manager-comment {
    padding: 10px 14px;
    display: flex;
    background-color: #fff;
    margin-top: 0;
    border-top: 1px solid #eaeaea;
}

/* 商家留言 */

.manager-comment .comment {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
}

.manager-comment .comment .comment-date {
    font-size: 12px;
    color: #999;
}

/* 购物车列表 */

.cart-list {
    background-color: #fff;
    padding: 0 10px;
}

.cart-item {
    display: flex;
    position: relative;
    padding: 5px;
    border-bottom: 1px solid #ddd;
}

.cart-item:last-child {
    border-bottom: 0;
}

.cart-item .product-image image {
    width: 100rpx;
    height: 100rpx;
    flex-basis: 100rpx;
}

.cart-item .cart-detail-wrapper {
    display: flex;
    flex-grow: 1;
    padding: 0 20rpx;
}

.cart-item .cart-detail, .cart-item .cart-quantity {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.cart-item .cart-detail {
    width: 350rpx;
}

.cart-item .cart-detail .product-title, .cart-item .cart-detail .choose-wrapper {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.cart-item .cart-detail .product-title {
    /* color: #96588a; */
    word-break: break-all;
    font-size: 12px;
}

.cart-item .cart-detail .choose-wrapper {
    font-size: 12px;
}

.cart-item .cart-detail .choose-wrapper .choose-tip {
    display: none;
}

.cart-item .cart-item-price {
    display: flex;
    align-items: center;
}

/* 价格详情 */

.price-detail, .date-detail {
    background-color: #fff;
    padding: 10px 14px;
    margin-bottom: 0;
}

.price-detail .detail-row {
    display: flex;
    font-size: 12px;
    justify-content: space-between;
}

.price-detail .detail-row .detail-name {
    width: 50px;
}

.price-detail .detail-row .detail-value, .date-detail .detail-row .detail-value {
    display: flex;
    justify-content: space-between;
    /* color: #96588a; */
    color: #21759b;
    font-size: 12px;
}

.price-detail .detail-row.subtotal .detail-value .currency,
.price-detail .detail-row.shipping .detail-value .currency,
.price-detail .detail-row.fee .detail-value .currency {
    margin-left: 5px;
}

/* 实付金额 */

.order-total {
    padding: 10px 14px;
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    margin-top: 0;
    border-top: 1px solid #eaeaea;
}

.order-total .order-total-text {
    display: flex;
    align-items: center;
}

.order-total .price {
    /* color: #96588a; */
    color: #21759b;
    font-size: 16px;
}

/* 订单时间 */

.date-detail {
    margin-top: 10px;
}

.date-detail .detail-row {
    display: flex;
    font-size: 12px;
}

.date-detail .detail-row .detail-name {
    width: 70px;
}

/* 操作按钮 */

.actions-button {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    position: fixed;
    left: 0;
    bottom: 0;
    border-top: 1px solid #ddd;
    background-color: #fff;
}

.actions-button button {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 7px 0;
    border-radius: 2px;
    margin-right: 10px;
    border: 1px solid #ccc;
    line-height: 34px;
}

.actions-button button.btn-primary {
    border-radius: 2px;
    margin-right: 10px;
    border-color: transparent;
}
